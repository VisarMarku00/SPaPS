@model SPaPS.Models.AccountModels.LoginModel

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form asp-action="Login" method="post">
        <div class="col-md-3" col-6>
            <div class="form-floating mb-3">
                <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com">
                <label asp-for="Email"></label>
            </div>
        </div>
        <div class="col-md-3" col-6>
            <div class="form-floating mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                <label asp-for="Password"></label>
            </div>
        </div>
    <button type="submit" class="btn btn-primary">Log in</button>
</form>

<p class="col-12 text-center text-danger"> @Html.ValidationMessage("Error")</p>
<h4 class="col-12 text-center text-success"> @Html.ValidationMessage("Succes")</h4>



